<div class="home-header">
    {{#if search}}
    <h1>Resultado da pesquisa: <span>{{search}}</span></h1>
      {{#if toughtsQty}}
      <p>Quantitade de resultados encontrados: <span>{{toughtsQty}}</span></p>
      {{else}}
      <p>Nenhum resultado para: <span>{{search}}</span></p>
      {{/if}}
    {{else}}
    <h1>Todo os pensamentos</h1>
    {{/if}}
    <form action="/" method="get">
    <input type="text" name="search" placeholder="Esta procurando por algo?">
    <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordernar por: </span>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="new">
        <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="old">
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar  </a>
    </div>
</div>
<div class="toughts-container">
    {{#each toughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>De: <span>{{this.User.name}}</span></figcaption>
    </figure>
    {{/each}}
</div>